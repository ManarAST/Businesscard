<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp"
    tools:context="com.example.android.businesscard.MainActivity"
    >
    <!-- background -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <!-- Logo Image -->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <!-- Business Name -->
            <TextView
                android:id="@+id/NameBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Name:"
                android:layout_toRightOf="@id/logo"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nabadat"
                android:layout_below="@id/NameBox"
                android:layout_toRightOf="@id/logo"
                android:textSize="22sp"
                android:fontFamily="sans-serif-light"/>

            <!-- Description -->
            <TextView
                android:id="@+id/DescriptionBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descriptiontion:"
                android:layout_below="@id/logo"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium"/>
            <TextView
                android:id="@+id/Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="An E-shop that makes and sells creative, inspiring, educational and organizational produts."
                android:layout_below="@id/DescriptionBox"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"/>

            <!--Products Pics -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here are examples of what they sell:"
                android:layout_below="@+id/Description"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="24dp"
                android:id="@+id/picBox"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic2"
                android:layout_below="@id/picBox"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/pic2" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic1"
                android:layout_below="@id/picBox"
                android:layout_toLeftOf="@id/pic2"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/pic1" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic3"
                android:layout_below="@id/picBox"
                android:layout_toRightOf="@id/pic2"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/pic3" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic5"
                android:layout_below="@id/pic1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/pic5" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic6"
                android:layout_below="@id/pic1"
                android:layout_toRightOf="@id/pic2"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/pic6" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic7"
                android:layout_below="@id/pic1"
                android:layout_toLeftOf="@id/pic2"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/pic7" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic8"
                android:layout_below="@id/pic5"
                android:layout_toLeftOf="@id/pic2"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/pic8" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic9"
                android:layout_below="@id/pic5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/pic9" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pic10"
                android:layout_below="@id/pic5"
                android:layout_toRightOf="@id/pic2"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/pic10" />




            <!-- social contact -->
            <TextView
                android:id="@+id/social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Social Network:"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/pic9"
                android:layout_alignLeft="@+id/pic9"
                android:layout_alignStart="@+id/pic9" />

            <!-- web -->

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/WebPic"
                android:src="@drawable/weblogo"

                android:layout_below="@id/social"
                android:layout_centerHorizontal="true"

                android:layout_marginTop="12dp"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/WebLink"
                android:text="@string/NabadatWeb"
                android:clickable="true"
                android:autoLink="web"

                android:layout_below="@id/WebPic"
                android:layout_centerHorizontal="true"/>



            <!-- Insta -->

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/InstaPic"
                android:src="@drawable/instagram"

                android:layout_below="@id/social"
                android:layout_toRightOf="@id/WebPic"

                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/InstaLink"
                android:text="@string/Insta"
                android:clickable="true"
                android:autoLink="all"

                android:layout_below="@id/WebPic"
                android:layout_toRightOf="@id/WebLink"


              />





            <!-- twitter -->
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/TwitterPic"
            android:src="@drawable/twitter"

            android:layout_below="@id/social"
            android:layout_toLeftOf="@id/WebPic"

            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TwitterLink"
            android:text="@string/Twitter"
            android:clickable="true"
            android:autoLink="all"

            android:layout_below="@id/WebPic"
            android:layout_toLeftOf="@id/WebLink"/>





        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
